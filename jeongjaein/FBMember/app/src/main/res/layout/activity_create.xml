<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity">

    <EditText
        android:id="@+id/C_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="E-mail"
        app:layout_constraintBaseline_toBaselineOf="@+id/C_email"
        app:layout_constraintEnd_toStartOf="@+id/C_email"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/passwordview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="PWD"
        app:layout_constraintBaseline_toBaselineOf="@+id/C.password"
        app:layout_constraintEnd_toStartOf="@+id/C.password"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/C.password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passwordview"
        app:layout_constraintTop_toBottomOf="@+id/C_email" />

    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/C.name"
        app:layout_constraintEnd_toStartOf="@+id/C.name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/C.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameview"
        app:layout_constraintTop_toBottomOf="@+id/C.password" />

    <Button
        android:id="@+id/btncreate"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="87dp"
        android:text="Create !"
        app:layout_constraintStart_toStartOf="@+id/C.name"
        app:layout_constraintTop_toBottomOf="@+id/C.name" />
</androidx.constraintlayout.widget.ConstraintLayout>