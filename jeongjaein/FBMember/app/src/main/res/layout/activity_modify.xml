<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".ModifyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="회원정보 수정"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/t_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:text="E-Mail"></TextView>

    <TextView
        android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_email"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Name"></TextView>

    <TextView
        android:id="@+id/t_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_name"
        android:layout_margin="50dp"
        android:layout_marginStart="50dp"
        android:text="PWD"></TextView>

    <TextView
        android:id="@+id/modify_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/t_email"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/t_email">

    </TextView>

    <EditText
        android:id="@+id/modify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/t_name"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/t_name">

    </EditText>

    <EditText
        android:id="@+id/modify_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/t_pwd"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/t_pwd">

    </EditText>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="OK">

    </Button>


    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ok_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="BACK">

    </Button>
</RelativeLayout>
